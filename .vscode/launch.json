    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Dockerlint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "main.go",
            "args": ["dockerlint", "lint", "-l", "Dockerfile"],
            "env": {
                "APP_ENV": "local"
            },
            "envFile": "${workspaceFolder}/env/.env",
            "dlvFlags": ["--check-go-version=false"] 
        }
    ]
}